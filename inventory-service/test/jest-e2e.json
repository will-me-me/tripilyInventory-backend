{
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "rootDir": "../",
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "moduleDirectories": ["node_modules", "src"]
}
